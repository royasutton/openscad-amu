################################################################################
# Variables
################################################################################

# Source scope scripts
scope_stamp	:= $(addsuffix $(stamp_ext), $(scopes))
scope_mf		:= $(addsuffix $(mf_ext), $(scopes))
scope_mfs		:= $(addsuffix $(mfs_ext), $(scopes))
scope_scad	:= $(addsuffix $(src_ext), $(scopes))

ifeq (${prefix_scope_scripts},$(true))
	scope_stamp	:= $(addprefix $(output_directory),$(scope_stamp))
	scope_mf		:= $(addprefix $(output_directory),$(scope_mf))
	scope_mfs		:= $(addprefix $(output_directory),$(scope_mfs))
	scope_scad	:= $(addprefix $(output_directory),$(scope_scad))
endif

#------------------------------------------------------------------------------#
# Configuration Variable List
#------------------------------------------------------------------------------#

scopes_config_variables += \
	scope_joiner \
	image_extension_paths

#------------------------------------------------------------------------------#
# Help text
#------------------------------------------------------------------------------#

define help_text_scopes
 all-scopes:
 clean-scopes:
 info-scopes:
   Build/clean/info for all openscad-amu scope components.
endef

################################################################################
# eof
################################################################################
