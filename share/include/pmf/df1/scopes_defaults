################################################################################
# Defaults
################################################################################

# Preferred openscad-amu tools version to use (if available).
# must be specified in Makefile prior to including amu_pm_init.
# AMU_TOOL_VERSION := v1.0

# Prefix output path to auxiliary scope scripts
prefix_scope_scripts				:= $(true)

# Verbosity
verbose_seam								:= $(false)
verbose_seam_show						:= $(false)

# Debugging
debug_seam_scanner					:= $(false)

# List of source auxilary scopes (should be set in Makefile).
scopes											:=

# Scope joiner
scope_joiner								:= _

# Image search directory names
image_extension_paths				:= png png2eps

#------------------------------------------------------------------------------#
# Control Variable List
#------------------------------------------------------------------------------#

scopes_control_variables := \
	prefix_scope_scripts \
	\
	verbose_seam \
	verbose_seam_show \
	\
	debug_seam_scanner

